= form_for @competition do |f|
  - if @competition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@competition.errors.count, "error")} prohibited this competition from being saved:"
      %ul
        - @competition.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :date_start
    = f.date_select :date_start
  .field
    = f.label :date_end
    = f.date_select :date_end
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :format
    = f.text_field :format
  .actions
    = f.submit 'Save'
