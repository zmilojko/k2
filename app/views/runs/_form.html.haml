= form_for @run do |f|
  - if @run.errors.any?
    #error_explanation
      %h2= "#{pluralize(@run.errors.count, "error")} prohibited this run from being saved:"
      %ul
        - @run.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :entry
    = f.text_field :entry
  .field
    = f.label :race
    = f.text_field :race
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :verdict
    = f.text_field :verdict
  .field
    = f.label :result_time
    = f.text_field :result_time
  .actions
    = f.submit 'Save'
